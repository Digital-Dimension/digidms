---
import BreadcrumbNav from './BreadcrumbNav.astro';
import type { BreadcrumbItem } from './BreadcrumbNav.astro';

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: BreadcrumbItem[];
  /** Rückwärtskompatibel: einfacher Breadcrumb */
  breadcrumb?: {
    label: string;
    href: string;
  };
}

const { title, description, breadcrumbs, breadcrumb } = Astro.props;

// Rückwärtskompatibilität: einfachen Breadcrumb in Array umwandeln
const items: BreadcrumbItem[] = breadcrumbs || (breadcrumb ? [{ label: breadcrumb.label }] : []);
---

<section class="bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/20 py-12 md:py-16 border-b border-gray-100">
  <div class="container-wide">
    {items.length > 0 && (
      <div class="-mt-2 mb-2">
        <BreadcrumbNav items={items} />
      </div>
    )}

    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-navy mb-4">
      {title}
    </h1>

    {description && (
      <p class="text-lg text-gray-600 max-w-3xl">
        {description}
      </p>
    )}
  </div>
</section>
