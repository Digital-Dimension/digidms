---
interface Props {
  title: string;
  description?: string;
  breadcrumb?: {
    label: string;
    href: string;
  };
}

const { title, description, breadcrumb } = Astro.props;
---

<section class="bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/20 py-12 md:py-16 border-b border-gray-100">
  <div class="container-wide">
    {breadcrumb && (
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors">
              Start
            </a>
          </li>
          <li class="text-gray-400">/</li>
          <li>
            <span class="text-gray-700 font-medium">{breadcrumb.label}</span>
          </li>
        </ol>
      </nav>
    )}
    
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-navy mb-4">
      {title}
    </h1>
    
    {description && (
      <p class="text-lg text-gray-600 max-w-3xl">
        {description}
      </p>
    )}
  </div>
</section>
