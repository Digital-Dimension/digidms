---
/**
 * ServiceCard.astro - Wiederverwendbare Service-Karte mit SVG-Icons
 *
 * @usage
 * <ServiceCard
 *   title="OCR-Texterkennung"
 *   description="Automatische Texterkennung in gescannten Dokumenten"
 *   icon="search"
 *   href="/funktionen"
 * />
 */

export interface Props {
  title: string;
  description: string;
  href?: string;
  icon?: string;
  tagline?: string;
  size?: 'default' | 'large';
  variant?: 'default' | 'outlined' | 'filled';
}

const {
  title,
  description,
  href,
  icon = 'file',
  tagline,
  size = 'default',
  variant = 'default',
} = Astro.props;

