const variantClasses = {
  default: 'card',
  outlined: 'border-2 border-gray-200 rounded-xl hover:border-primary-300 transition-colors',
  filled: 'bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors',
};

const sizeClasses = {
  default: 'p-6',
  large: 'p-8',
};

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block',
    href && 'group',
    variantClasses[variant],
    sizeClasses[size],
  ]}
>
  <div
    class:list={[
      'icon-container mb-4 transition-all duration-300',
      href && 'group-hover:scale-110 group-hover:bg-primary-100',
      size === 'large' && 'icon-container-lg',
    ]}
  >
    <svg
      class:list={[
        href && 'transition-colors group-hover:text-primary-700',
        size === 'large' ? 'w-8 h-8' : 'w-6 h-6',
      ]}
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        d={icons[icon] || icons['file']}
      />
    </svg>
  </div>

  {tagline && (
    <p class="text-sm text-primary-600 font-medium mb-2">{tagline}</p>
  )}

  <h3
    class:list={[
      'font-semibold text-navy mb-2',
      href && 'group-hover:text-primary-600 transition-colors',
      size === 'large' ? 'text-xl' : 'text-lg',
    ]}
  >
    {title}
  </h3>

  <p
    class:list={[
      'text-gray-600',
      size === 'large' ? 'text-base' : 'text-sm',
      href && 'mb-4',
    ]}
  >
    {description}
  </p>

  {href && (
    <span class="inline-flex items-center text-primary-600 font-medium text-sm group-hover:gap-2 transition-all">
      Mehr erfahren
      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </span>
  )}
</Tag>
