---
interface Props {
  title: string;
  subtitle?: string;
  kicker?: string;
  centered?: boolean;
}

const { 
  title, 
  subtitle, 
  kicker,
  centered = true 
} = Astro.props;
---

<div class={`mb-12 md:mb-16 ${centered ? 'text-center' : ''}`}>
  {kicker && (
    <span class="inline-block text-sm font-semibold text-primary-600 uppercase tracking-wider mb-2">
      {kicker}
    </span>
  )}
  <h2 class="text-3xl md:text-4xl font-bold text-navy mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class={`text-lg text-gray-600 ${centered ? 'max-w-2xl mx-auto' : ''}`}>
      {subtitle}
    </p>
  )}
</div>
