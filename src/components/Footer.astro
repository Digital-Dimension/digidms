            <span class="text-green-400">ðŸ’š</span>
            Open Source
          </span>
        </div>
      </div>

      <!-- Produkt Links -->
      <div>
        <h4 class="font-semibold text-white mb-4">Produkt</h4>
        <ul class="space-y-2">
          {siteConfig.footerNavigation.produkt.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white text-sm transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Rechtliches -->
      <div>
        <h4 class="font-semibold text-white mb-4">Rechtliches</h4>
        <ul class="space-y-2">
          {siteConfig.footerNavigation.rechtliches.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white text-sm transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Kontakt -->
      <div>
        <h4 class="font-semibold text-white mb-4">Kontakt</h4>
        <address class="not-italic text-sm text-gray-300 space-y-2">
          <p class="font-medium text-white">{siteConfig.company.name}</p>
          <p>{siteConfig.company.street}</p>
          <p>{siteConfig.company.city}</p>
          <p class="pt-2">
            <a href={`mailto:${siteConfig.company.email}`} class="hover:text-white transition-colors">
              {siteConfig.company.email}
            </a>
          </p>
          <p>
            <a href={`tel:${siteConfig.company.phone.replace(/\s/g, '')}`} class="hover:text-white transition-colors">
              {siteConfig.company.phoneDisplay}
            </a>
          </p>
        </address>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-700">
