<script>
  const employeesInput = document.getElementById('employees') as HTMLInputElement;
  const searchtimeInput = document.getElementById('searchtime') as HTMLInputElement;
  const hourlyrateInput = document.getElementById('hourlyrate') as HTMLInputElement;

  const employeesValue = document.getElementById('employees-value');
  const searchtimeValue = document.getElementById('searchtime-value');
  const hourlyrateValue = document.getElementById('hourlyrate-value');

  const costWeek = document.getElementById('cost-week');
  const costMonth = document.getElementById('cost-month');
  const costYear = document.getElementById('cost-year');
  const hoursYear = document.getElementById('hours-year');
  const daysYear = document.getElementById('days-year');
  const savingYear = document.getElementById('saving-year');
  const roiMonths = document.getElementById('roi-months');

  function formatCurrency(value: number): string {
    return new Intl.NumberFormat('de-DE', { 
      style: 'currency', 
      currency: 'EUR',
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    }).format(value);
  }

  function calculate() {
    const employees = parseInt(employeesInput.value);
    const searchtime = parseFloat(searchtimeInput.value);
    const hourlyrate = parseInt(hourlyrateInput.value);

    if (employeesValue) employeesValue.textContent = employees.toString();
    if (searchtimeValue) searchtimeValue.textContent = searchtime.toString().replace('.', ',') + 'h';
    if (hourlyrateValue) hourlyrateValue.textContent = hourlyrate + ' â‚¬';

    const weeklyHours = employees * searchtime;
    const weeklyCost = weeklyHours * hourlyrate;
    const monthlyCost = weeklyCost * 4;
    const yearlyCost = weeklyCost * 48;
    const yearlyHours = weeklyHours * 48;
    const yearlyDays = yearlyHours / 8;

    const yearlySaving = yearlyCost * 0.8;
    const digidmsCost = 150 * 12;
    const netSaving = yearlySaving - digidmsCost;
    const monthsToRoi = digidmsCost / (yearlySaving / 12);

    if (costWeek) costWeek.textContent = formatCurrency(weeklyCost);
    if (costMonth) costMonth.textContent = formatCurrency(monthlyCost);
    if (costYear) costYear.textContent = formatCurrency(yearlyCost);
    if (hoursYear) hoursYear.textContent = Math.round(yearlyHours).toString();
    if (daysYear) daysYear.textContent = Math.round(yearlyDays).toString();
    if (savingYear) savingYear.textContent = formatCurrency(netSaving > 0 ? netSaving : yearlySaving);
    if (roiMonths) {
      if (monthsToRoi < 1) {
        roiMonths.textContent = '< 1 Monat';
      } else if (monthsToRoi > 12) {
        roiMonths.textContent = '> 12 Monate';
      } else {
        roiMonths.textContent = Math.round(monthsToRoi) + ' Monat' + (Math.round(monthsToRoi) > 1 ? 'e' : '');
      }
    }
  }

  employeesInput?.addEventListener('input', calculate);
  searchtimeInput?.addEventListener('input', calculate);
  hourlyrateInput?.addEventListener('input', calculate);

  calculate();
</script>
