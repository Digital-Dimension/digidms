---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import { siteConfig } from '../config/site';
---

<Layout title="Impressum - DigiDMS" description="Impressum und rechtliche Informationen der Digital Dimension IT GmbH">
  
  <PageHeader
    title="Impressum"
    description="Angaben gemäß § 5 TMG"
    breadcrumb={{ label: "Impressum", href: "/impressum" }}
  />

  <section class="section bg-white">
    <div class="container-narrow">
      <div class="prose prose-lg max-w-none">
        
        <!-- Diensteanbieter -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Diensteanbieter
          </h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <address class="not-italic text-gray-700">
              <strong class="text-navy text-lg">{siteConfig.company.name}</strong><br />
              {siteConfig.company.street}<br />
              {siteConfig.company.city}<br />
              {siteConfig.company.country}
            </address>
          </div>
        </div>

        <!-- Kontaktmöglichkeiten -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Kontaktmöglichkeiten
          </h2>
          <div class="grid sm:grid-cols-2 gap-4">
            <a href={`tel:${siteConfig.company.phone.replace(/\s/g, '')}`} class="bg-gray-50 rounded-xl p-6 hover:bg-gray-100 transition-colors group">
              <div class="flex items-center gap-3 mb-2">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="font-semibold text-navy">Telefon</span>
              </div>
              <span class="text-primary-600 group-hover:underline">{siteConfig.company.phoneDisplay}</span>
            </a>
            <a href={`mailto:${siteConfig.company.email}`} class="bg-gray-50 rounded-xl p-6 hover:bg-gray-100 transition-colors group">
              <div class="flex items-center gap-3 mb-2">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="font-semibold text-navy">E-Mail</span>
              </div>
              <span class="text-primary-600 group-hover:underline">{siteConfig.company.email}</span>
            </a>
          </div>
        </div>

        <!-- Vertretungsberechtigte -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Vertretungsberechtigte Personen
          </h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-0">
              <strong>Geschäftsführer:</strong><br />
              Robin Goldammer und Henning Scholand
            </p>
          </div>
        </div>

        <!-- Angaben zum Unternehmen -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Angaben zum Unternehmen
          </h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <p class="text-sm text-gray-500 mb-1">Handelsregister</p>
                <p class="text-gray-700 font-medium mb-0">HRB 32423</p>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1">Registergericht</p>
                <p class="text-gray-700 font-medium mb-0">Amtsgericht Wuppertal</p>
              </div>
              <div class="sm:col-span-2">
                <p class="text-sm text-gray-500 mb-1">Umsatzsteuer-Identifikationsnummer</p>
                <p class="text-gray-700 font-medium mb-0">DE328263885</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Berufshaftpflichtversicherung -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            Berufshaftpflichtversicherung
          </h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-0">
              <strong>Hiscox SA</strong><br />
              Niederlassung für Deutschland<br />
              Bernhard-Wicki-Str. 3<br />
              80636 München<br /><br />
              <a href="https://www.hiscox.de" target="_blank" rel="noopener" class="text-primary-600 hover:underline">www.hiscox.de</a>
            </p>
          </div>
        </div>

        <!-- Online-Streitbeilegung -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
            </svg>
            Online-Streitbeilegung
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
            <p class="text-gray-700 mb-4">
              Die Europäische Kommission stellt eine Plattform für die außergerichtliche Online-Streitbeilegung 
              (OS-Plattform) bereit. Verbraucher haben die Möglichkeit, diese Plattform für die Beilegung 
              ihrer Streitigkeiten zu nutzen.
            </p>
            <a 
              href="https://ec.europa.eu/consumers/odr/" 
              target="_blank" 
              rel="noopener"
              class="inline-flex items-center gap-2 text-primary-600 hover:underline font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              OS-Plattform öffnen
            </a>
          </div>
        </div>

        <!-- Haftungshinweise -->
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-navy mb-4 flex items-center gap-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Haftungs- und Urheberrechtshinweise
          </h2>
          
          <div class="space-y-4">
            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="font-semibold text-navy mb-2">Links auf fremde Webseiten</h3>
              <p class="text-gray-700 text-sm mb-0">
                Inhalte fremder Webseiten, auf die wir direkt oder indirekt verweisen, liegen außerhalb 
                unseres Verantwortungsbereiches und machen wir uns nicht zu Eigen. Für alle Inhalte und 
                insbesondere für Schäden, die aus der Nutzung der in den verlinkten Webseiten aufrufbaren 
                Informationen entstehen, haftet allein der Anbieter der verlinkten Webseiten.
              </p>
            </div>

            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="font-semibold text-navy mb-2">Markenrechte und Urheberrechte</h3>
              <p class="text-gray-700 text-sm mb-0">
                Alle auf dieser Website dargestellten Inhalte, wie Texte, Fotografien, Grafiken, Marken 
                und Warenzeichen sind durch die jeweiligen Schutzrechte (Urheberrechte, Markenrechte) geschützt. 
                Die Verwendung, Vervielfältigung usw. unterliegen unseren Rechten oder den Rechten der 
                jeweiligen Urheber bzw. Rechteverwalter.
              </p>
            </div>

            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="font-semibold text-navy mb-2">Bildnachweise</h3>
              <p class="text-gray-700 text-sm mb-0">
                Bilder und Grafiken auf dieser Website stammen aus folgenden Quellen:<br />
                <a href="https://www.unsplash.com" target="_blank" rel="noopener" class="text-primary-600 hover:underline">Unsplash</a>,
                <a href="https://www.pexels.com" target="_blank" rel="noopener" class="text-primary-600 hover:underline">Pexels</a>,
                <a href="https://storyset.com" target="_blank" rel="noopener" class="text-primary-600 hover:underline">Storyset</a>
              </p>
            </div>
          </div>
        </div>

        <!-- Datenschutz-Link -->
        <div class="bg-primary-50 border border-primary-100 rounded-2xl p-6 md:p-8">
          <div class="flex items-start gap-4">
            <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <div>
              <h3 class="font-semibold text-navy mb-2">Datenschutz</h3>
              <p class="text-gray-700 mb-3">
                Informationen zum Umgang mit Ihren personenbezogenen Daten finden Sie in unserer Datenschutzerklärung.
              </p>
              <a href="/datenschutz" class="inline-flex items-center gap-2 text-primary-600 hover:underline font-medium">
                Zur Datenschutzerklärung
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>
