---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import { siteConfig } from '../config/site';
---

<Layout title="DMS Beratung anfragen: Kontakt | DigiDMS" description="Kontaktieren Sie uns für eine unverbindliche Beratung. Wir erstellen Ihnen gerne ein maßgeschneidertes Angebot.">
  
  <PageHeader
    title="Kontakt & Anfrage"
    description="Gerne besprechen wir mit Ihnen Ihre spezifischen Anforderungen und erstellen ein maßgeschneidertes Angebot."
    breadcrumb={{ label: "Kontakt", href: "/kontakt" }}
  />

  <section class="section bg-white">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        
        <!-- Kontaktinformationen -->
        <div>
          <h2 class="text-2xl font-bold text-navy mb-6">Kontaktmöglichkeiten</h2>
          
          <!-- Kontakt-Box -->
          <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-6 mb-8">
            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg bg-white shadow-sm flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500">E-Mail</p>
                  <a href={`mailto:${siteConfig.company.email}`} class="text-navy font-semibold hover:text-primary-600 transition-colors">
                    {siteConfig.company.email}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg bg-white shadow-sm flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Telefon</p>
                  <a href={`tel:${siteConfig.company.phone.replace(/\s/g, '')}`} class="text-navy font-semibold hover:text-primary-600 transition-colors">
                    {siteConfig.company.phoneDisplay}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg bg-white shadow-sm flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Geschäftszeiten</p>
                  <p class="text-navy font-semibold">{siteConfig.company.businessHours}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Anschrift -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-navy mb-4">Anschrift</h3>
            <address class="not-italic text-gray-600">
              <p class="font-semibold text-navy">{siteConfig.company.name}</p>
              <p class="mt-1">Vertretungsberechtigte Personen:</p>
              <p>{siteConfig.company.representatives.join(' und ')}</p>
              <p class="mt-2">{siteConfig.company.street}</p>
              <p>{siteConfig.company.city}</p>
              <p>{siteConfig.company.country}</p>
            </address>
          </div>

          <!-- Quick Actions -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href={`mailto:${siteConfig.company.email}`} class="btn-primary flex-1 justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              E-Mail schreiben
            </a>
            <a href={`tel:${siteConfig.company.phone.replace(/\s/g, '')}`} class="btn-secondary flex-1 justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Jetzt anrufen
            </a>
          </div>
        </div>

        <!-- Prozess -->
        <div>
          <h2 class="text-2xl font-bold text-navy mb-6">So geht's weiter</h2>
          
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-lg font-bold text-primary-600">1</span>
              </div>
              <div class="pt-2">
                <h3 class="font-bold text-navy">Kontaktaufnahme</h3>
                <p class="text-gray-600 text-sm">Per E-Mail oder Telefon – wie es Ihnen am liebsten ist.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-lg font-bold text-primary-600">2</span>
              </div>
              <div class="pt-2">
                <h3 class="font-bold text-navy">Beratungsgespräch</h3>
                <p class="text-gray-600 text-sm">Wir klären Ihre Anforderungen und beantworten alle Fragen.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-lg font-bold text-primary-600">3</span>
              </div>
              <div class="pt-2">
                <h3 class="font-bold text-navy">Angebot</h3>
                <p class="text-gray-600 text-sm">Transparentes Angebot innerhalb von 24 Stunden.</p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center">
                <span class="text-lg font-bold text-white">4</span>
              </div>
              <div class="pt-2">
                <h3 class="font-bold text-navy">Setup & Start</h3>
                <p class="text-gray-600 text-sm">Ihre Instanz ist am nächsten Tag produktiv.</p>
              </div>
            </div>
          </div>

          <!-- Info-Box -->
          <div class="mt-8 p-6 bg-gray-50 rounded-2xl">
            <h4 class="font-semibold text-navy mb-2">Unverbindlich und kostenlos</h4>
            <p class="text-gray-600 text-sm">
              Das Erstgespräch und die Bedarfsanalyse sind für Sie komplett kostenlos und unverbindlich. 
              Wir nehmen uns Zeit für Ihre Fragen – ohne Verkaufsdruck.
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Map / Additional Info Section -->
  <section class="py-12 bg-gray-50">
    <div class="container-wide">
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-semibold text-navy mb-1">100% Deutschland</h3>
          <p class="text-sm text-gray-600">Server und Support aus Deutschland</p>
        </div>

        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-blue-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-navy mb-1">Schnelle Reaktion</h3>
          <p class="text-sm text-gray-600">Support-Antwort in unter 4 Stunden</p>
        </div>

        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-purple-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-navy mb-1">Persönlicher Kontakt</h3>
          <p class="text-sm text-gray-600">Feste Ansprechpartner für Sie</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
